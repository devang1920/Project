<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculator">



    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/framlayout1"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/edValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:background="#C5B8B8"
            android:gravity="right|center"
            android:textSize="25pt"
            android:text="0" />
        <TextView
            android:id="@+id/txtOp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:textSize="20pt"
            android:textColor="#000"
            android:text="" />

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginTop="@dimen/cardview_default_radius"
            android:text=""
            android:textSize="20pt" />
    </FrameLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:id="@+id/tablelayout"
        android:layout_height="wrap_content"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/btnAc"
                android:text="AC"
                android:textSize="20sp"
                android:textColor="#FF9800"
                android:textStyle="bold"
                android:onClick="AcEvent"
                android:layout_margin="1pt"
                android:layout_height="40pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:backgroundTint="#808080"
                ></Button>
            <!--            <Button-->
            <!--                android:id="@+id/btnRemove"-->
            <!--                android:text="-"-->
            <!--                android:layout_margin="1pt"-->
            <!--                android:layout_height="40pt"-->
            <!--                android:layout_width="30pt"-->
            <!--                android:layout_weight="1"-->
            <!--                android:backgroundTint="@color/gray"-->
            <!--                ></Button>-->




            <Button
                android:id="@+id/imageButton"
                android:text="+/-"
                android:textSize="20sp"
                android:layout_margin="1pt"
                android:layout_height="40pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:backgroundTint="#808080"
                ></Button>

            <Button
                android:id="@+id/btnModulo"
                android:text="%"
                android:textSize="20sp"
                android:layout_margin="1pt"
                android:layout_height="40pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:backgroundTint="#808080"
                ></Button>
            <Button
                android:id="@+id/btnMultiplay"
                android:text="*"
                android:textSize="20sp"
                android:onClick="OprationEvent"
                android:layout_margin="1pt"
                android:layout_height="40pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:backgroundTint="#808080"
                ></Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btn7"
                android:text="7"
                android:textSize="20sp"
                android:onClick="numberEvent"
                android:layout_margin="1pt"
                android:layout_height="40pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:backgroundTint="#808080" />
            <Button
                android:id="@+id/btn8"
                android:text="8"
                android:textSize="20sp"
                android:onClick="numberEvent"
                android:layout_margin="1pt"
                android:layout_height="40pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:backgroundTint="#808080"
                ></Button>
            <Button
                android:id="@+id/btn9"
                android:text="9"
                android:textSize="20sp"
                android:onClick="numberEvent"
                android:layout_margin="1pt"
                android:layout_height="40pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:backgroundTint="#808080"
                ></Button>
            <Button
                android:id="@+id/btnDivide"
                android:text="/"
                android:textSize="20sp"
                android:onClick="OprationEvent"
                android:layout_margin="1pt"
                android:layout_height="40pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:backgroundTint="#808080"
                ></Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/btn4"
                android:text="4"
                android:textSize="20sp"
                android:onClick="numberEvent"
                android:layout_margin="1pt"
                android:layout_height="40pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:backgroundTint="#808080"
                ></Button>
            <Button
                android:id="@+id/btn5"
                android:text="5"
                android:textSize="20sp"
                android:onClick="numberEvent"
                android:layout_margin="1pt"
                android:layout_height="40pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:backgroundTint="#808080"
                ></Button>
            <Button
                android:id="@+id/btn6"
                android:text="6"
                android:textSize="20sp"
                android:onClick="numberEvent"
                android:layout_margin="1pt"
                android:layout_height="40pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:backgroundTint="#808080"
                ></Button>
            <Button
                android:id="@+id/btnPlus"
                android:text="+"
                android:textSize="20sp"
                android:onClick="OprationEvent"
                android:layout_margin="1pt"
                android:layout_height="40pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:backgroundTint="#808080"
                ></Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/btn1"
                android:text="1"
                android:textSize="20sp"
                android:onClick="numberEvent"
                android:layout_margin="1pt"
                android:layout_height="40pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:backgroundTint="#808080"
                ></Button>
            <Button
                android:id="@+id/btn2"
                android:text="2"
                android:textSize="20sp"
                android:onClick="numberEvent"
                android:layout_margin="1pt"
                android:layout_height="40pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:backgroundTint="#808080"
                ></Button>
            <Button
                android:id="@+id/btn3"
                android:text="3"
                android:textSize="20sp"
                android:onClick="numberEvent"
                android:layout_margin="1pt"
                android:layout_height="40pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:backgroundTint="#808080"
                ></Button>
            <Button
                android:id="@+id/btnMinus"
                android:text="-"
                android:textSize="20sp"
                android:onClick="OprationEvent"
                android:layout_margin="1pt"
                android:layout_height="40pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:backgroundTint="#808080"
                ></Button>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnPlusMinus"
                android:text="+/-"
                android:onClick="numberEvent"
                android:textSize="20sp"
                android:layout_width="30pt"
                android:layout_height="40pt"
                android:layout_margin="1pt"
                android:layout_weight="1"
                android:backgroundTint="#808080"
                ></Button>

            <Button
                android:id="@+id/btn0"
                android:text="0"
                android:textSize="20sp"
                android:onClick="numberEvent"
                android:layout_margin="1pt"
                android:layout_height="40pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:backgroundTint="#808080"
                ></Button>
            <Button
                android:id="@+id/btnPoint"
                android:text="."
                android:textSize="20sp"
                android:onClick="numberEvent"
                android:layout_margin="1pt"
                android:layout_height="40pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:backgroundTint="#808080"
                ></Button>
            <Button
                android:id="@+id/btnEqual"
                android:text="="
                android:textColor="#FF9800"
                android:textSize="20sp"
                android:onClick="EqualEvent"
                android:layout_margin="1pt"
                android:layout_height="40pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:backgroundTint="#808080"
                ></Button>
        </TableRow>
    </TableLayout>
</LinearLayout>
